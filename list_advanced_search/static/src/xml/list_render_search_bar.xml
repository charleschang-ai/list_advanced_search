<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <t t-name="ListRendererSearchInherit" t-inherit="web.ListRenderer" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('o_list_renderer')]//table[@t-ref='table']/thead/tr" position="after">
            <tr>
                <th/>
                <t t-foreach="columns" t-as="column" t-key="column.id">
                    <t t-set="field_data" t-value="this.env.model.config.fields[column.name]"/>
                    <th t-if="column.type === 'field' and field_data?.sortable">
                        <t t-if="column.field.supportedTypes">
                            <t t-if="column.widget !== 'badge' and !column.field.supportedTypes.includes('date') and !column.field.supportedTypes.includes('datetime') and !column.field.supportedTypes.includes('boolean')">
                                <div class="search-input" t-att-id="column.name + 'Container'">
                                    <!--                                    <div style="display: flex;">-->
                                    <input type="text" t-att-id="column.name + 'Input'" class="input_data"
                                           t-on-input="(ev) => this._onInput(ev, column.name)"
                                           t-att-placeholder="column.label"/>
                                    <i class="fa fa-search" t-on-click="(ev) => this._onClick_search(ev, column.name)"/>
                                    <!--                                    </div>-->
                                </div>
                            </t>
                            <t t-if="column.field.supportedTypes.includes('date') || column.field.supportedTypes.includes('datetime')">
                                <DateRange onFromToChanged="(value) => this.changeDate(column.name, value)"/>
                            </t>
                        </t>
                        <t t-if="column.widget === 'badge' and field_data.type == 'selection'">
                            <Dropdown class="'btn-group dp-class'" togglerClass="'btn btn-secondary'" showCaret="true"
                                      listRendererClass="uniqueRendererClass">
                                <t t-set-slot="toggler">
                                    <span class="fa fa-filter" style="margin-right: 10px;"/>
                                    <t t-out="column.label"/>
                                </t>
                                <t t-if="field_data.selection" t-foreach="field_data.selection" t-as="selection"
                                   t-key="selection_index">
                                    <DropdownItem parentClosingMode="'none'"
                                                  onSelected="() => this.changeStateSelection(column.name, selection[0])">
                                        <span t-esc="selection[1]"/>
                                        <i class="fa fa-check" t-if="selection[0] === selectedItem"
                                           style="margin-left: 7px; color: black;"/>
                                    </DropdownItem>
                                </t>
                            </Dropdown>
                        </t>
                        <t t-if="column.field.supportedTypes.includes('boolean')">
                            <div class="boolean-filter" t-att-id="column.name + 'Container'">
                                <select class="boolean-select"
                                        t-on-change="(ev) => this.onBooleanChanged(ev, column.name)">
                                    <option value="">All</option>
                                    <option value="true">True</option>
                                    <option value="false">False</option>
                                </select>
                                <i class="fa fa-toggle-on"/>
                            </div>
                        </t>

                    </th>
                    <th t-else="">
                        <div/>
                    </th>
                </t>
                <th/>
            </tr>
        </xpath>
    </t>

</templates>